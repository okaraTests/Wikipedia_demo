<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:clickable="true"
    android:elevation="1dp"
    android:focusable="true"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/explore_item_img"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:scaleType="centerCrop"
            android:src="@drawable/jamiroquai" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:id="@+id/txt_explore_title"
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/black4text"
                android:layout_height="wrap_content"
                android:text="jamiroquai"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kurz erklaerungen"
                android:id="@+id/txt_explore_shortDescription"/>
            <View
                android:layout_width="170dp"
                android:layout_height=".5dp"
                android:layout_marginTop="8dp"
                android:background="@color/black"/>
            <TextView
                android:id="@+id/txt_explore_detail"
                android:maxLines="8"
                android:lineSpacingExtra="4dp"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:textColor="@color/black4text"
                android:layout_height="wrap_content"
                android:text="@string/matne_tolani"/>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>